{% set form = hookable_metadata.context.form %}

<div class="col-12"><hr></div>
<div class="col-12" {{ stimulus_controller('vanssa-slide-preview') }}>
    <div class="accordion" id="slide-translation-options-accordion">
        <div class="accordion-item">
            <h3 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#slide-translation-options-responsive">
                    <i class="bi bi-laptop me-1"></i> Responsive
                </button>
            </h3>
            <div id="slide-translation-options-responsive" class="accordion-collapse collapse show" data-bs-parent="#slide-translation-options-accordion">
                <div class="accordion-body">
                    {% include '@VanssaSyliusSliderPlugin/admin/slide/form/sections/_responsive_settings.html.twig' with {
                        responsive_form: form.settings.responsive,
                        responsive_id: form.vars.id ~ '-responsive'
                    } %}

                    <div class="row mt-3">
                        <div class="col-12">{% include '@VanssaSyliusSliderPlugin/admin/shared/form/slide_preview.html.twig' %}</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h3 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#slide-translation-options-linking">
                    {{ 'sylius.ui.link'|trans }}
                </button>
            </h3>
            <div id="slide-translation-options-linking" class="accordion-collapse collapse" data-bs-parent="#slide-translation-options-accordion">
                <div class="accordion-body row">
                    <div class="col-12 col-md-6">{{ form_row(form.buttonLabel) }}</div>
                    <div class="col-12 col-md-6">{{ form_row(form.url) }}</div>
                    <div class="col-12 col-md-4">{{ form_row(form.settings.linking.type) }}</div>
                    <div class="col-12 col-md-4">{{ form_row(form.settings.linking.buttonAppearance) }}</div>
                    <div class="col-12 col-md-4">{{ form_row(form.settings.linking.buttonSize) }}</div>
                    <div class="col-12 col-md-4">{{ form_row(form.settings.linking.buttonPosition) }}</div>
                    <div class="col-12 col-md-4">{{ form_row(form.settings.linking.overlay) }}</div>
                    <div class="col-12 col-md-4">{{ form_row(form.settings.linking.openExternal) }}</div>
                    <div class="col-12 col-md-4">{{ form_row(form.settings.linking.showProductFocusImage) }}</div>
                </div>
            </div>
        </div>
    </div>
</div>
