{% import '@SyliusAdmin/shared/helper/translations.html.twig' as translations %}
{% set form = hookable_metadata.context.form %}
{% set prefixes = hookable_metadata.prefixes %}

<div class="card mb-3">
    <div class="card-header">
        <h2 class="card-title">
            {{ 'sylius.ui.translations'|trans }}
        </h2>
    </div>
    <div class="card-body row">
        <div class="col-12">
            {{ translations.with_hook(form.translations, prefixes, null, {accordion_id: 'slide-translations', accordion_flush: true}) }}
        </div>
    </div>
</div>
