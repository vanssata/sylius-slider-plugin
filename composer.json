{
    "name": "vanssa/sylius-slider-plugin",
    "type": "sylius-plugin",
    "description": "Vanssa Sylius Slider plugin.",
    "keywords": [
        "sylius",
        "sylius-plugin",
        "slider",
        "automotive"
    ],
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.3",
        "sylius/sylius": "^2.1"
    },
    "require-dev": {
        "behat/behat": "^3.16",
        "dbrekelmans/bdi": "^1.4",
        "dmore/behat-chrome-extension": "^1.4",
        "dmore/chrome-mink-driver": "^2.9",
        "friends-of-behat/mink": "^1.11",
        "friends-of-behat/mink-browserkit-driver": "^1.6",
        "friends-of-behat/mink-debug-extension": "^2.1",
        "friends-of-behat/mink-extension": "^2.7",
        "friends-of-behat/page-object-extension": "^0.3",
        "friends-of-behat/suite-settings-extension": "^1.1",
        "friends-of-behat/symfony-extension": "^2.6",
        "friends-of-behat/variadic-extension": "^1.6",
        "nyholm/psr7": "^1.8",
        "phpstan/phpstan": "^1.12",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-webmozart-assert": "^1.2",
        "phpunit/phpunit": "^10.5",
        "sylius-labs/coding-standard": "^4.4",
        "sylius-labs/suite-tags-extension": "~0.2",
        "sylius/sylius-rector": "^2.0",
        "sylius/test-application": "^2.0.0@alpha",
        "symfony/ai-mate": "^0.3.0",
        "symfony/browser-kit": "^7.4",
        "symfony/debug-bundle": "^7.4",
        "symfony/dotenv": "^7.4",
        "symfony/http-client": "^7.4",
        "symfony/intl": "^7.4",
        "symfony/runtime": "^7.4",
        "symfony/web-profiler-bundle": "^7.4",
        "symfony/webpack-encore-bundle": "^2.2"
    },
    "suggest": {
        "sylius/cms-plugin": "Optional CMS integration template support for rendering sliders in CMS blocks.",
        "monsieurbiz/sylius-rich-editor-plugin": "Optional rich editor support for slide descriptions in admin and storefront."
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "php-http/discovery": false,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.2-dev"
        },
        "symfony": {
            "require": "^7.4"
        },
        "public-dir": "vendor/sylius/test-application/public",
        "ai-mate": {
            "extension": false,
            "scan-dirs": [
                "mate/src"
            ],
            "includes": [
                "mate/config.php"
            ],
            "instructions": "mate/INSTRUCTIONS.md"
        }
    },
    "autoload": {
        "psr-4": {
            "Vanssa\\SyliusSliderPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Vanssa\\SyliusSliderPlugin\\": [
                "tests/",
                "tests/TestApplication/src/"
            ],
            "App\\Mate\\": "mate/src/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php bin/validate-directory.php"
        ],
        "post-create-project-cmd": [
            "@php bin/rename-plugin.php",
            "@test-app-init",
            "@php bin/show-success.php"
        ],
        "database-reset": [
            "vendor/bin/console doctrine:database:drop --force --if-exists",
            "vendor/bin/console doctrine:database:create",
            "vendor/bin/console doctrine:migrations:migrate -n",
            "vendor/bin/console sylius:fixtures:load -n"
        ],
        "frontend-clear": [
            "cd vendor/sylius/test-application && yarn install && yarn build",
            "vendor/bin/console assets:install"
        ],
        "test-app-init": [
            "@database-reset",
            "@frontend-clear"
        ],
        "load-slider-demo-fixtures": [
            "vendor/bin/console sylius:fixtures:load --suite=vanssa_sylius_slider_demo -n"
        ]
    }
}
